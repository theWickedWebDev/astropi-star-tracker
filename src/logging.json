{
  "version": 1,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "stderr": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stderr"
    }
  },
  "loggers": {
    "__main__": {
      "level": "DEBUG",
      "handlers": [
        "stderr"
      ],
      "propagate": true
    },
    "src.lib.stellarium": {
      "level": "DEBUG",
      "handlers": [
        "stderr"
      ],
      "propagate": true
    },
    "src.stepper": {
      "level": "DEBUG",
      "handlers": [
        "stderr"
      ],
      "propagate": true
    },
    "src.telescope_control": {
      "level": "DEBUG",
      "handlers": [
        "stderr"
      ],
      "propagate": true
    }
  }
}